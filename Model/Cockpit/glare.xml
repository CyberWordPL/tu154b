<!--Stabilizer-->
<!--Manu cover-->
<animation>
  <type>rotate</type>
  <object-name>stab_manu_cover</object-name>  
  <property>tu154/switches/stab-manu-cover</property>
  <interpolation>
    <entry><ind>	0.0</ind>	<dep>	0.0</dep></entry>
    <entry><ind>	1.0</ind>	<dep>	90.0</dep></entry>
  </interpolation>
  <axis>
    <x1-m>0.618</x1-m>
    <y1-m>-0.1694</y1-m>
    <z1-m>1.2203</z1-m>
    <x2-m>0.7644</x2-m>
    <y2-m>-0.1694</y2-m>
    <z2-m>1.0304</z2-m>
  </axis>
</animation>
<animation>
  <type>pick</type>
  <object-name>stab_manu_cover</object-name>  
  <visible>true</visible>
  <action>
    <button>0</button>
    <repeatable>false</repeatable>
    <binding>
      <command>nasal</command>
      <script>
        var pos = getprop("tu154/switches/stab-manu-cover");
        if( pos == nil ) pos = 0.0;
        if( pos == 0.0 ) pos = 1.0; else pos = 0.0;
        setprop("tu154/switches/stab-manu-cover", pos);
        setprop("fdm/jsbsim/fcs/stab-manu-switch", pos);
        pos = getprop("fdm/jsbsim/fcs/stabilizer-auto-pos");
        if( pos == nil ) pos = 0.0;
        setprop("fdm/jsbsim/fcs/stab-manu-cmd", pos);
      </script>
    </binding>
  </action>
</animation>

<!--Stab auto selector-->
<animation>
  <type>rotate</type>
  <object-name>stab_auto_handle</object-name>
  <property>tu154/switches/stab-auto-handle</property>
  <interpolation>
    <entry><ind>	0.0</ind>	<dep>	-30.0</dep></entry>
    <entry><ind>	1.0</ind>	<dep>	0.0</dep></entry>
    <entry><ind>	2.0</ind>	<dep>	30.0</dep></entry>
  </interpolation>
  <center>
    <x-m>0.664766</x-m>
    <y-m>0.0</y-m>
    <z-m>1.13053</z-m>
  </center>
  <axis>
    <x>0.0</x>
    <y>1.0</y>
    <z>0.0</z>
  </axis>
</animation>
<animation>
  <type>pick</type>
  <object-name>stab_auto_handle</object-name>  
  <visible>true</visible>
  <action>
    <button>1</button>
    <repeatable>false</repeatable>
    <binding>
      <command>nasal</command>
      <script>
        var pos = getprop("tu154/switches/stab-auto-handle");
        if( pos == nil ) pos = 0.0;
        pos = pos + 1.0;
        if( pos == 3.0 ) pos = 2.0;
        setprop("tu154/switches/stab-auto-handle", pos);
        if( getprop("fdm/jsbsim/fcs/flap-cmd-norm") == 0.0 ) 
        	setprop("fdm/jsbsim/fcs/stab-auto-cmd", pos);
        else if( pos > getprop("fdm/jsbsim/fcs/stab-auto-cmd") ) 
        	setprop("fdm/jsbsim/fcs/stab-auto-cmd", pos);
      </script>
    </binding>
  </action>
  <action>
    <button>0</button>
    <repeatable>false</repeatable>
    <binding>
      <command>nasal</command>
      <script>
        var pos = getprop("tu154/switches/stab-auto-handle");
        if( pos == nil ) pos = 0.0;
        pos = pos - 1.0;
        if( 0.0 > pos ) pos = 0.0;
        setprop("tu154/switches/stab-auto-handle", pos);
        if( getprop("fdm/jsbsim/fcs/flap-cmd-norm") == 0.0 ) 
        	setprop("fdm/jsbsim/fcs/stab-auto-cmd", pos);
      </script>
    </binding>
  </action>
  <action>
    <button>4</button>
    <repeatable>false</repeatable>
    <binding>
      <command>nasal</command>
      <script>
        var pos = getprop("tu154/switches/stab-auto-handle");
        if( pos == nil ) pos = 0.0;
        pos = pos + 1.0;
        if( pos == 3.0 ) pos = 2.0;
        setprop("tu154/switches/stab-auto-handle", pos);
        if( getprop("fdm/jsbsim/fcs/flap-cmd-norm") == 0.0 ) 
	        setprop("fdm/jsbsim/fcs/stab-auto-cmd", pos);
        else if( pos > getprop("fdm/jsbsim/fcs/stab-auto-cmd") ) 
        	setprop("fdm/jsbsim/fcs/stab-auto-cmd", pos);
      </script>
    </binding>
  </action>
  <action>
    <button>3</button>
    <repeatable>false</repeatable>
    <binding>
      <command>nasal</command>
      <script>
        var pos = getprop("tu154/switches/stab-auto-handle");
        if( pos == nil ) pos = 0.0;
        pos = pos - 1.0;
        if( 0.0 > pos ) pos = 0.0;
        setprop("tu154/switches/stab-auto-handle", pos);
        if( getprop("fdm/jsbsim/fcs/flap-cmd-norm") == 0.0 ) 
        	setprop("fdm/jsbsim/fcs/stab-auto-cmd", pos);
      </script>
    </binding>
  </action>

</animation>


<!-- Manual stabilizer selector -->
<animation>
  <type>rotate</type>
  <object-name>stab_manu_lever</object-name>
  <property>tu154/switches/stab-manu-selector</property>  
  <interpolation>
    <entry><ind>	0.0</ind>	<dep>	-20.0</dep></entry>
    <entry><ind>	1.0</ind>	<dep>	0.0</dep></entry>
    <entry><ind>	2.0</ind>	<dep>	20.0</dep></entry>
  </interpolation>
  <center>
    <x-m>0.672295</x-m>
    <y-m>-0.119033</y-m>
    <z-m>1.11767</z-m>
  </center>
  <axis>
    <x>0.0</x>
    <y>1.0</y>
    <z>0.0</z>
  </axis>
</animation>
<!--Control-->
<animation>
  <type>pick</type>
  <object-name>stab_manu_down</object-name>
  <visible>false</visible>
  <action>
    <button>0</button>
    <repeatable>true</repeatable>
    <binding>
      <command>nasal</command>
      <script>
        setprop("tu154/switches/stab-manu-selector", 2.0);
        if( 1.0 > getprop("fdm/jsbsim/fcs/stab-manu-cmd") ) controls.slewProp("fdm/jsbsim/fcs/stab-manu-cmd",0.1);
      </script>
    </binding>
  <mod-up>
    <binding>
      <command>nasal</command>
      <script>
        setprop("tu154/switches/stab-manu-selector", 1.0);
      </script>
    </binding>
  </mod-up>
  </action>
</animation>
<animation>
  <type>pick</type>
  <object-name>stab_manu_up</object-name>
  <visible>false</visible>
  <action>
    <button>0</button>
    <repeatable>true</repeatable>
    <binding>
      <command>nasal</command>
      <script>
        setprop("tu154/switches/stab-manu-selector", 0.0);
        if( getprop("fdm/jsbsim/fcs/stab-manu-cmd") > 0.0 ) controls.slewProp("fdm/jsbsim/fcs/stab-manu-cmd",-0.1);
      </script>
    </binding>
    <mod-up>
      <binding>
        <command>nasal</command>
        <script>
          setprop("tu154/switches/stab-manu-selector", 1.0);
        </script>
      </binding>
    </mod-up>
  </action>
</animation>




