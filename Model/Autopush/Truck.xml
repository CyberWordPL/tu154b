<PropertyList>
  <path>Aircraft/tu154b/Model/Autopush/Truck/Goldhofert.ac</path>
	
	<effect>
		<inherits-from>Aircraft/tu154b/Model/Autopush/Truck/Goldhofert</inherits-from>
		<object-name>Goldhofert</object-name>
	</effect>
  <effect>
    <inherits-from>Effects/glass</inherits-from>
		<object-name>Goldhofert_transparent</object-name>
  </effect>
	
	<model>
		<name>Spot_L</name>
		<path>Aircraft/tu154b/Model/Services/truck_lightspot.xml</path>
		<offsets>
			<x-m>-6.04</x-m>
			<y-m>-1.11</y-m>
			<z-m>0.83</z-m>
			<!--<heading-deg>0.0</heading-deg>-->
		</offsets>
	</model>
	<model>
		<name>Spot_R</name>
		<path>Aircraft/tu154b/Model/Services/truck_lightspot.xml</path>
		<offsets>
			<x-m>-6.04</x-m>
			<y-m>1.11</y-m>
			<z-m>0.83</z-m>
			<!--<heading-deg>0.0</heading-deg>-->
		</offsets>
	</model>
	
	<!-- dont show the light model during day-->
	<animation>
		<type>select</type>
		<object-name>Spot_L</object-name>
		<object-name>Spot_R</object-name>
		<condition>
			<property>/environment/lightmap-factor</property>
    </condition>
	</animation>

  <!-- Trucks models and artworks courtesy of XPGoodWay Team
(http://www.xpgoodwayteam.org/site_xpushback/) -->

  <model>
    <path>Aircraft/tu154b/Model/Autopush/Truck/Goldhofert-warning-light.xml</path>
    <offsets>
      <x-m>-5.408</x-m>
      <y-m>0.260</y-m>
      <z-m>2.226</z-m>
      <heading-deg>0</heading-deg>
    </offsets>
  </model>

  <model>
    <path>Aircraft/tu154b/Model/Autopush/Truck/Goldhofert-warning-light.xml</path>
    <offsets>
      <x-m>-4.281</x-m>
      <y-m>0.260</y-m>
      <z-m>2.226</z-m>
      <heading-deg>90</heading-deg>
    </offsets>
  </model>

 <animation>
   <type>spin</type>
   <object-name>wheelfl</object-name>
   <object-name>wheelfr</object-name>
   <property>&ROLLSPEED-PROP;</property>
   <factor>-16.3</factor>
   <center>
     <x-m>-2.8976</x-m>
     <y-m>0</y-m>
     <z-m>0.5809</z-m>
   </center>
   <axis>
     <x>0</x>
     <y>1</y>
     <z>0</z>
   </axis>
 </animation>

 <animation>
   <type>spin</type>
   <object-name>wheelrl</object-name>
   <object-name>wheelrr</object-name>
   <property>&ROLLSPEED-PROP;</property>
   <factor>-16.3</factor>
   <center>
     <x-m>2.0501</x-m>
     <y-m>0</y-m>
     <z-m>0.5735</z-m>
   </center>
   <axis>
     <x>0</x>
     <y>1</y>
     <z>0</z>
   </axis>
 </animation>

 <animation>
   <type>select</type>
   <condition>
     <property>&CONNECTED-PROP;</property>
   </condition>
 </animation>

 <animation>
   <type>rotate</type>
   <property>&YAW-PROP;</property>
   <factor>&YAW-MULT;</factor>
   <center>
     <x-m>0</x-m>
     <y-m>0</y-m>
     <z-m>0</z-m>
   </center>
   <axis>
     <x>0</x>
     <y>0</y>
     <z>-1</z>
   </axis>
 </animation>

 <animation>
   <type>translate</type>
   <property>&COMPRESSION-PROP;</property>
   <offset-m>0.1</offset-m>
   <factor>0.2800</factor>
   <axis>
     <x>0</x>
     <y>0</y>
     <z>1</z>
   </axis>
 </animation>

 <animation>
   <type>rotate</type>
   <!--<property>&PITCH-PROP;</property>
   <factor>&PITCH-FACTOR;</factor>
   <offset-deg>&PITCH-OFFSET;</offset-deg>-->
		<expression>
			<rad2deg>
				<atan2>
					<difference>
						<sum>
							<property>gear/gear[0]/compression-norm</property>
							<value>-0.656</value>
						</sum>
						<product>
							<sum>
								<property>gear/gear[2]/compression-norm</property>
								<property>gear/gear[1]/compression-norm</property>
							</sum>
							<value>0.5</value>
						</product>
					</difference>
					<value>68.3</value>
				</atan2>
			</rad2deg>
		</expression>
   <center>
     <x-m>0</x-m>
     <y-m>0</y-m>
     <z-m>0</z-m>
   </center>
   <axis>
     <x>0</x>
     <y>1</y>
     <z>0</z>
   </axis>
 </animation>

	<animation>
		<type>rotate</type>
		<expression>
			<rad2deg>
				<atan2>
					<difference>
						<property>gear/gear[2]/compression-norm</property>
						<property>gear/gear[1]/compression-norm</property>
					</difference>
					<value>40.65</value>
				</atan2>
			</rad2deg>
		</expression>
		<center>
			<x-m>0.0</x-m>
			<y-m>0.0</y-m>
			<z-m>0.0</z-m>
		</center>
		<axis>
			<x>1</x>
			<y>0</y>
			<z>0</z>
		</axis>
	</animation>
</PropertyList>
