<animation>
	<type>select</type>
	<object-name>cover</object-name>
	<object-name>cover-under</object-name>
	<object-name>cover-rods</object-name>
	<condition>
		<property>sim/multiplay/generic/bool[31]</property>
	</condition>
</animation>
	
	<!-- Lights night illumination -->
	<animation>
		<type>material</type> 
		<object-name>Lights_front</object-name>
		<object-name>Lights_rear</object-name>
			<condition>
				<or>
					<greater-than>
						<property>/sim/time/sun-angle-rad</property>
						<value>1.45</value>
					</greater-than>
					<less-than>
						<property>/environment/visibility-m</property>
						<value>4500.00</value>
					</less-than>
				</or>
			</condition>
		<emission>	
			<red>0.7</red>	
			<green>0.7</green>	
			<blue>0.5</blue>
		</emission>
	</animation>
	
	<model>
		<name>Spot_L</name>
		<path>Aircraft/tu154b/Model/Services/truck_lightspot.xml</path>
		<offsets>
			<x-m>-0.96</x-m>
			<y-m>-1.56</y-m>
			<z-m>-2.8</z-m>
			<heading-deg>-90.0</heading-deg>
		</offsets>
	</model>
	<model>
		<name>Spot_R</name>
		<path>Aircraft/tu154b/Model/Services/truck_lightspot.xml</path>
		<offsets>
			<x-m>0.96</x-m>
			<y-m>-1.56</y-m>
			<z-m>-2.8</z-m>
			<heading-deg>-90.0</heading-deg>
		</offsets>
	</model>
	
	<!-- dont show the light model during day-->
	<animation>
		<type>select</type> 
		<object-name>Lights_front</object-name>
		<object-name>Lights_rear</object-name>
		<object-name>Spot_L</object-name>
		<object-name>Spot_R</object-name>
		<condition>
				<or>
					<greater-than>
						<property>/sim/time/sun-angle-rad</property>
						<value>1.45</value>
					</greater-than>
					<less-than>
						<property>/environment/visibility-m</property>
						<value>4500.00</value>
					</less-than>
				</or>
			</condition>
	</animation>
		
</PropertyList>
