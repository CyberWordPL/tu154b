<PropertyList>

	<name>Mobile Stairs</name>
	<path>stairs.ac</path>
	
	<effect>
		<inherits-from>Aircraft/tu154b/Model/Services/groundservices</inherits-from>
		<object-name>Stairs</object-name>
		<parameters><lightmap-enabled type="int">0</lightmap-enabled></parameters>
	</effect>
	<effect>
		<inherits-from>Aircraft/tu154b/Model/Services/groundservices</inherits-from>
		<object-name>Stairs_lm</object-name>
		<parameters>
			<lightmap-enabled type="int"><use>/environment/lightmap-factor</use></lightmap-enabled>
			<texture n="3"><image>Aircraft/tu154b/Model/Services/Stairs/truck_lm.png</image></texture>
		</parameters>
	</effect>

