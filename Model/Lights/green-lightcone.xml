<PropertyList>

 <light>
  <name>green-lightcone</name>
  <type>spot</type>
  <position>
   <x-m>0.0</x-m>
   <y-m>0.0</y-m>
   <z-m>0.0</z-m>
  </position>
  <direction>
    <x>0.0</x>
    <y>0.0</y>
    <z>-1.0</z>
  </direction>
  <ambient>
   <r>0.0098</r>
   <g>0.1</g>
   <b>0.0098</b>
   <a>1.0</a>
  </ambient>
  <diffuse>
   <r>0.098</r>
   <g>1.0</g>
   <b>0.098</b>
   <a>1.0</a>
  </diffuse>
  <specular>
   <r>0.098</r>
   <g>1.0</g>
   <b>0.098</b>
   <a>1.0</a>
  </specular>
  <!-- 1.0, 4.5 / range, 75 / range^2 -->
  <attenuation>
    <c>8.0</c>
    <l>0.22</l>
    <q>0.20</q>
  </attenuation>
  <spot-exponent>1.3</spot-exponent>
  <spot-cutoff>89</spot-cutoff>
  <range-m>25.0</range-m>
 </light>

  <animation>
    <type>select</type>
    <object-name>green-lightcone</object-name>
    <condition>
      <property>sim/multiplay/generic/bool[0]</property>
    </condition>
</animation>

</PropertyList> 