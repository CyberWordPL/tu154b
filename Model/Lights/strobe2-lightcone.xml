<PropertyList>

 <light>
  <name>strobe-lightcone</name>
  <type>spot</type>
  <position>
   <x-m>0.0</x-m>
   <y-m>0.0</y-m>
   <z-m>0.0</z-m>
  </position>
  <direction>
    <x>0.0</x>
    <y>0.0</y>
    <z>-1.0</z>
  </direction>
  <ambient>
   <r>0.1</r>
   <g>0.0098</g>
   <b>0.0098</b>
   <a>1.0</a>
  </ambient>
  <diffuse>
   <r>1.0</r>
   <g>0.098</g>
   <b>0.098</b>
   <a>1.0</a>
  </diffuse>
  <specular>
   <r>1.0</r>
   <g>0.098</g>
   <b>0.098</b>
   <a>1.0</a>
  </specular>
  <!-- 1.0, 4.5 / range, 75 / range^2 -->
  <attenuation>
   <c>7.5</c>
   <l>0.3</l>
   <q>0.2</q>
  </attenuation>
  <spot-exponent>1.3</spot-exponent>
  <spot-cutoff>89</spot-cutoff>
  <range-m>25.0</range-m>
 </light>

<animation>
  <type>select</type>
  <object-name>strobe-lightcone</object-name>
  <condition>
    <or>
    <property>tu154/light/strobe/strobe_2</property>
    <property>sim/multiplay/generic/int[7]</property>
    </or>
  </condition>
</animation>

</PropertyList> 