<?xml version="1.0"?>

<PropertyList>

    <path>procedural_cone.ac</path>
    <nopreview/>

    <effect>
        <inherits-from>procedural-light-ldg</inherits-from>
        <object-name>procedural_light</object-name>
    </effect>

    <animation>
        <type>noshadow</type>
        <object-name>procedural_light</object-name>
    </animation>

    <animation>
        <type>select</type>
        <object-name>procedural_light</object-name>
        <condition>
            <property>sim/multiplay/generic/bool[1]</property>
        </condition>
    </animation>

    <animation>
        <type>scale</type>
        <x-offset>2.5</x-offset>
        <y-offset>2.5</y-offset>
        <z-offset>2.5</z-offset>
    </animation>

    <animation>
        <type>dist-scale</type>
        <object-name>procedural_light</object-name>
        <interpolation>
            <entry>
                <ind>0</ind>
                <dep>1</dep>
            </entry>
            <entry>
                <ind>300</ind>
                <dep>4</dep>
            </entry>
            <entry>
                <ind>1500</ind>
                <dep>8</dep>
            </entry>
        </interpolation>
    </animation>

</PropertyList>
