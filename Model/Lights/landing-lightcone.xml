<PropertyList>

<light>
   <type>spot</type>
   <name>landing-lightcone</name>
   <nopreview/>
   <position>
     <x>0.0</x>
     <y>0.0</y>
     <z>0.0</z>
   </position>
   <direction>
     <x>0.0</x>
     <y>0.0</y>
     <z>-1.0</z>
   </direction>
   <ambient>
     <r>0.03</r>
     <g>0.03</g>
     <b>0.03</b>
     <a>1.0</a>
   </ambient>
   <diffuse>
     <r>0.7</r>
     <g>0.7</g>
     <b>0.6</b>
     <a>1.0</a>
   </diffuse>
   <specular>
     <r>0.7</r>
     <g>0.7</g>
     <b>0.7</b>
     <a>1.0</a>
   </specular>
    <attenuation>
     <c>0.2</c><!--0.25-->
     <l>0.00005</l>
     <q>0.00001</q>
    </attenuation>
   <spot-exponent>150.0</spot-exponent>
   <spot-cutoff>25</spot-cutoff>
   <range-m>2500</range-m>
 </light>

  <animation>
	  <type>select</type>
    <object-name>landing-lightcone</object-name>
    <condition>
      <and>
      <equals>
        <property>tu154/light/retract</property>
        <value>1.0</value>
      </equals>
      <greater-than>
        <property>tu154/light/headlight-selector</property>
        <value>0.95</value>
      </greater-than>
      <greater-than>
        <property>tu154/systems/electrical/buses/DC27-bus-L/volts</property>
        <value>0</value>
      </greater-than>
      </and>
    </condition>
  </animation>


 
</PropertyList> 