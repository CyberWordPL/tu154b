<PropertyList>

 <light>
  <name>white-lightpoint</name>
  <type>point</type>
  <position>
   <x-m>0.0</x-m>
   <y-m>0.0</y-m>
   <z-m>0.0</z-m>
  </position>
  <ambient>
   <r>0.1</r>
   <g>0.1</g>
   <b>0.1</b>
   <a>1.0</a>
  </ambient>
  <diffuse>
   <r>1.0</r>
   <g>1.0</g>
   <b>1.0</b>
   <a>1.0</a>
  </diffuse>
  <specular>
   <r>1.0</r>
   <g>1.0</g>
   <b>1.0</b>
   <a>1.0</a>
  </specular>
  <!-- 1.0, 4.5 / range, 75 / range^2 -->
  <attenuation>
   <c>25.0</c>
   <l>0.3</l>
   <q>0.3</q>
  </attenuation>
  <range-m>25.0</range-m>
 </light>

<animation>
  <type>select</type>
  <object-name>white-lightpoint</object-name>
  <condition>
    <or>
    <property>tu154/light/nav/blue</property>
    <property>sim/multiplay/generic/int[0]</property>
    </or>
  </condition>
</animation>

</PropertyList> 