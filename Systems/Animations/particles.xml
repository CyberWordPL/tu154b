<?xml version="1.0"?>

<PropertyList>

  <logic>
    <name>Smoke 1 Air</name>
    <input>
      <and>
        <and>
        <greater-than>
            <property>engines/engine[0]/rpm</property>
            <value>6200</value>
        </greater-than>
        <less-than>
            <property>position/altitude-agl-ft</property>
            <value>1678</value>
        </less-than>
        </and>
        <or>
          <less-than-equals>
            <property>gear/gear[0]/compression-norm</property>
            <value>0.0</value>
          </less-than-equals>
          <less-than-equals>
            <property>gear/gear[1]/compression-norm</property>
            <value>0.0</value>
          </less-than-equals>
          <less-than-equals>
            <property>gear/gear[2]/compression-norm</property>
            <value>0.0</value>
          </less-than-equals>
        </or>
      </and>
    </input>
    <output>tu154/contrail/smoke1</output>
  </logic>
