<?xml version="1.0"?>

<PropertyList>

  <logic>
    <name>Landing Light</name>
    <inverted>false</inverted>
    <input>
      <and>
        <equals>
          <property>tu154/light/retract</property>
          <value>1.0</value>
        </equals>
        <greater-than>
          <property>tu154/light/headlight-selector</property>
          <value>0.95</value>
        </greater-than>
        <greater-than>
          <property>tu154/systems/electrical/buses/DC27-bus-L/volts</property>
          <value>0</value>
        </greater-than>
      </and>
    </input>
    <output>sim/multiplay/generic/bool[1]</output>
  </logic>

  <logic>
    <name>Taxi Light</name>
    <inverted>false</inverted>
    <input>
      <and>
        <greater-than>
          <property>tu154/light/headlight-selector</property>
          <value>0.75</value>
        </greater-than>
        <less-than>
          <property>tu154/light/headlight-selector</property>
          <value>0.85</value>
        </less-than>
        <equals>
          <property>gear/gear/position-norm</property>
          <value>1</value>
        </equals>
        <greater-than>
          <property>tu154/systems/electrical/buses/DC27-bus-L/volts</property>
          <value>0</value>
        </greater-than>
      </and>
    </input>
    <output>sim/multiplay/generic/bool[2]</output>
  </logic>

  <logic>
    <name>Logo Light</name>
    <inverted>false</inverted>
    <input>
      <property>tu154/light/headlight-selector</property>
      <property>tu154/systems/electrical/buses/DC27-bus-L/volts</property> 
    </input>
    <output>sim/multiplay/generic/bool[3]</output>
  </logic>

  <logic>
    <name>Upper Beacon Light</name>
    <inverted>false</inverted>
    <input>
      <property>tu154/light/strobe/strobe_1</property>
    </input>
    <output>sim/multiplay/generic/bool[4]</output>
  </logic>

  <logic>
    <name>Lower Beacon Light</name>
    <inverted>false</inverted>
    <input>
      <property>tu154/light/strobe/strobe_2</property>
    </input>
    <output>sim/multiplay/generic/bool[5]</output>
  </logic>

  <logic>
    <name>Passenger Cabin Light</name>
    <input>
      <greater-than>
        <property>tu154/light/instruments/int-green</property>
        <value>0.1</value>
      </greater-than>
    </input>
    <output>sim/multiplay/generic/float[0]</output>
  </logic>

  <logic>
    <name>Cargo Compartment Light</name>
    <input>
      <and>
        <property>tu154/systems/electrical/buses/DC27-bus-L/volts</property>
        <or>
          <property>tu154/door/cargo0</property>
          <property>tu154/door/cargo1</property>
        </or>
      </and>
    </input>
    <output>sim/multiplay/generic/float[1]</output>
  </logic>

</PropertyList>
