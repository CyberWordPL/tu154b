<!--ADF/VOR indicator USHDB
3D instrument for Tu-154 -->
<PropertyList>
 <path>ushdb.ac</path>
<!-- Internal instruments lighting -->
<animation>
  <type>material</type>
  <object-name>base</object-name>
  <object-name>txt1</object-name>
  <object-name>txt2</object-name>
  <object-name>txt3</object-name>
  <object-name>compass</object-name>
  <object-name>needle_1</object-name>
  <object-name>needle_2</object-name>
  <emission>
    <red-prop>tu154/light/instruments/int-red</red-prop>
    <green-prop>tu154/light/instruments/int-green</green-prop>
    <blue-prop>tu154/light/instruments/int-blue</blue-prop>
  </emission>
</animation>

<!--Compass-->
<animation>
  <type>rotate</type>
  <object-name>compass</object-name>
  <property>tu154/instrumentation/ushdb/compass</property>
  <axis>
   <x>-1.0</x>
   <y>0.0</y>
   <z>0.0</z>
  </axis>
</animation>


<!--Needles-->
<animation>
    <type>rotate</type>
    <object-name>needle_1</object-name>
    <property>tu154/instrumentation/ushdb/heading-deg-1</property>
    <axis>
      <x>-1.0</x>
      <y>0.0</y>
      <z>0.0</z>
    </axis>
</animation>

<animation>
  <type>rotate</type>
  <object-name>needle_2</object-name>
  <property>tu154/instrumentation/ushdb/heading-deg-2</property>
  <axis>
    <x>-1.0</x>
    <y>0.0</y>
    <z>0.0</z>
  </axis>
</animation>
<!-- Controls -->

<animation>
  <type>pick</type>
  <object-name>hs</object-name>
  <visible>false</visible>
  <action>
    <button>0</button>
    <repeatable>true</repeatable>
    <interval-sec>0.15</interval-sec>
    <binding>
      <command>property-adjust</command>
      <property>tu154/instrumentation/ushdb/compass</property>
      <step>1.0</step>
    </binding>
  </action>
</animation>
<animation>
  <type>pick</type>
  <object-name>hs</object-name>
  <visible>false</visible>
  <action>
    <button>1</button>
    <repeatable>true</repeatable>
    <interval-sec>0.15</interval-sec>
    <binding>
      <command>property-adjust</command>
      <property>tu154/instrumentation/ushdb/compass</property>
      <step>-1.0</step>
    </binding>
  </action>
</animation>
<!--Mouse wheel-->
<animation>
  <type>pick</type>
  <object-name>hs</object-name>
  <visible>false</visible>
  <action>
    <button>3</button>
    <repeatable>false</repeatable>
    <binding>
      <command>property-adjust</command>
      <property>tu154/instrumentation/ushdb/compass</property>
      <step>1.0</step>
    </binding>
  </action>
</animation>
<animation>
  <type>pick</type>
  <object-name>hs</object-name>
  <visible>false</visible>
  <action>
    <button>4</button>
    <repeatable>false</repeatable>
    <binding>
      <command>property-adjust</command>
      <property>tu154/instrumentation/ushdb/compass</property>
      <step>-1.0</step>
    </binding>
  </action>
</animation>


</PropertyList>
