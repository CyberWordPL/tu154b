<!--Buttons-->
<animation>
  <type>pick</type>
  <object-name>hs_1</object-name>
  <visible>false</visible>
  <action>
    <button>0</button>
    <repeatable>true</repeatable>
    <interval-sec>0.15</interval-sec>
    <binding>
      <command>nasal</command>
      <script>instruments.nvu_zpu_adjust(1, -1)</script>
    </binding>
  </action>
</animation>
<animation>
  <type>pick</type>
  <object-name>hs_2</object-name>
  <visible>false</visible>
  <action>
    <button>0</button>
    <repeatable>false</repeatable>
    <binding>
      <command>property-cycle</command>
      <property>tu154/instrumentation/v-140/adjust-step-1</property>
      <value>0.1</value>
      <value>10</value>
    </binding>
  </action>
  <hovered>
    <binding>
      <command>set-tooltip</command>
      <tooltip-id>nvu-adjust-step-1</tooltip-id>
      <label>Adjust step: %s</label>
      <property>tu154/instrumentation/v-140/adjust-step-1</property>
      <mapping>nasal</mapping>
      <script>return (arg[0] == 0.1 ? " 6'" : "10°")</script>
    </binding>
  </hovered>
</animation>
