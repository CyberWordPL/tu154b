<!-- V-140 NVU (navigation system) control
3D instrument for Tu-154 -->
<PropertyList>
 <path>v-140.ac</path>
<!--External panel lighting-->
<animation>
  <type>material</type>
  <object-name>base</object-name>
    <emission>
    <red-prop>tu154/light/panel/ext-red</red-prop>
    <green-prop>tu154/light/panel/ext-green</green-prop>
    <blue-prop>tu154/light/panel/ext-blue</blue-prop>
  </emission>
</animation>

<!-- Internal instruments lighting -->
<animation>
  <type>material</type>
  <object-name>text</object-name>
  <object-name>digits</object-name>
  <emission>
    <red-prop>tu154/light/instruments/int-red</red-prop>
    <green-prop>tu154/light/instruments/int-green</green-prop>
    <blue-prop>tu154/light/instruments/int-blue</blue-prop>
  </emission>
</animation>

<!--Indicators-->
<animation>
  <type>material</type>
  <object-name>I</object-name>
  <object-name>II</object-name>
  <emission>
    <red>1.0</red>
    <green>1.0</green>
    <blue>1.0</blue>
    <factor-prop>tu154/systems/electrical/checking-lamps/lamps-power</factor-prop>
  </emission>
</animation>

<animation>
  <type>select</type>
  <object-name>I</object-name>
  <condition>
    <equals>
      <property>fdm/jsbsim/instrumentation/nvu/active</property>
      <value>1</value>
    </equals>
  </condition>
</animation>
<animation>
  <type>select</type>
  <object-name>II</object-name>
  <condition>
    <equals>
      <property>fdm/jsbsim/instrumentation/nvu/active</property>
      <value>2</value>
    </equals>
  </condition>
</animation>
<!-- Digits I -->
<animation>
  <type>rotate</type>
  <object-name>dig_1_min</object-name>
  <property>tu154/systems/nvu/ZPU-1</property>
  <factor>360</factor>
  <center>
    <x-m>-0.02611</x-m>
    <y-m>0</y-m>
    <z-m>0.02395</z-m>
  </center>
  <axis>
    <x>0.0</x>
    <y>-1.0</y>
    <z>0.0</z>
  </axis>
</animation>
<animation>
  <type>rotate</type>
  <object-name>dig_1_ones</object-name>
  <expression>
    <product>
      <difference>
        <mod>
          <property>tu154/systems/nvu/ZPU-1</property>
          <value>10</value>
        </mod>
        <mod>
          <property>tu154/systems/nvu/ZPU-1</property>
          <value>1</value>
        </mod>
      </difference>
      <value>36</value>
    </product>
  </expression>
  <center>
    <x-m>-0.02611</x-m>
    <y-m>0</y-m>
    <z-m>0.02395</z-m>
  </center>
  <axis>
    <x>0.0</x>
    <y>-1.0</y>
    <z>0.0</z>
  </axis>
</animation>

<animation>
  <type>rotate</type>
  <object-name>dig_1_dec</object-name>
  <expression>
    <product>
      <difference>
        <mod>
          <property>tu154/systems/nvu/ZPU-1</property>
          <value>100</value>
        </mod>
        <mod>
          <property>tu154/systems/nvu/ZPU-1</property>
          <value>10</value>
        </mod>
      </difference>
      <value>3.6</value>
    </product>
  </expression>
  <center>
    <x-m>-0.02611</x-m>
    <y-m>0</y-m>
    <z-m>0.02395</z-m>
  </center>
  <axis>
    <x>0.0</x>
    <y>-1.0</y>
    <z>0.0</z>
  </axis>
</animation>

<animation>
