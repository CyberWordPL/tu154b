<!--Controls-->
<animation>
  <type>knob</type>
  <object-name>hs_7</object-name>
  <visible>false</visible>
  <increase>
    <binding>
      <command>nasal</command>
      <script>
        if (90 > getprop("fdm/jsbsim/instrumentation/nvu/wind-fork")) {
            var f = getprop("fdm/jsbsim/instrumentation/nvu/wind-fork");
            setprop("fdm/jsbsim/instrumentation/nvu/wind-fork", f + 0.25);
            var v = getprop("fdm/jsbsim/instrumentation/nvu/wind-azimuth-svs");
            v += 0.25;
            if (v >= 360)
                v = 0;
            setprop("fdm/jsbsim/instrumentation/nvu/wind-azimuth-svs", v);
        }
      </script>
    </binding>
  </increase>
  <decrease>
    <binding>
      <command>nasal</command>
      <script>
        if (getprop("fdm/jsbsim/instrumentation/nvu/wind-fork") > -90) {
            var f = getprop("fdm/jsbsim/instrumentation/nvu/wind-fork");
            setprop("fdm/jsbsim/instrumentation/nvu/wind-fork", f - 0.25);
            var v = getprop("fdm/jsbsim/instrumentation/nvu/wind-azimuth-svs");
            if (0.25 > v)
                v = 360;
            v -= 0.25;
            setprop("fdm/jsbsim/instrumentation/nvu/wind-azimuth-svs", v);
        }
      </script>
    </binding>
  </decrease>
</animation>

