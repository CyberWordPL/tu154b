<!-- Light switches block
3D instrument for Tu-154 -->
<PropertyList>
 <path>bano.ac</path>
<!--External panel lighting-->
<animation>
  <type>material</type>
  <object-name>handle_1</object-name>
  <object-name>handle_2</object-name>
  <object-name>handle_3</object-name>
  <object-name>base_1</object-name>
  <object-name>base_2</object-name>
  <object-name>base_3</object-name>
  <object-name>base_4</object-name>
  <emission>
    <red-prop>tu154/light/panel/ext-red</red-prop>
    <green-prop>tu154/light/panel/ext-green</green-prop>
    <blue-prop>tu154/light/panel/ext-blue</blue-prop>
  </emission>
</animation>

  
<animation>
  <type>rotate</type>
  <object-name>handle_1</object-name>
  <property>tu154/switches/bano</property>  
  <interpolation>
    <entry><ind>	0.0</ind>	<dep>	-60.0</dep></entry>
    <entry><ind>	1.0</ind>	<dep>	60.0</dep></entry>
  </interpolation>
  <axis>
    <x>0.0</x>
    <y>-1.0</y>
    <z>0.0</z>
  </axis>
</animation>
<animation>
  <type>rotate</type>
  <object-name>handle_2</object-name>
  <property>tu154/switches/omi</property>  
  <interpolation>
    <entry><ind>	0.0</ind>	<dep>	-60.0</dep></entry>
    <entry><ind>	1.0</ind>	<dep>	60.0</dep></entry>
  </interpolation>
  <axis>
    <x>0.0</x>
    <y>-1.0</y>
    <z>0.0</z>
  </axis>
</animation>
<animation>
  <type>rotate</type>
  <object-name>handle_3</object-name>
  <property>tu154/switches/gauge-light</property>  
  <interpolation>
    <entry><ind>	0.0</ind>	<dep>	-60.0</dep></entry>
    <entry><ind>	1.0</ind>	<dep>	60.0</dep></entry>
  </interpolation>
  <axis>
    <x>0.0</x>
    <y>-1.0</y>
    <z>0.0</z>
  </axis>
</animation>

<!--Control-->
<animation>
  <type>pick</type>
  <object-name>hotspot_1</object-name>
  <visible>false</visible>
  <action>
    <button>0</button>
    <repeatable>false</repeatable>
    <binding>
      <command>nasal</command>
      <script>
        interpolate("tu154/switches/bano", 1.0, 0.1 );
      </script>
    </binding>
  </action>
</animation>
<animation>
  <type>pick</type>
  <object-name>hotspot_2</object-name>
  <visible>false</visible>
  <action>
    <button>0</button>
    <repeatable>false</repeatable>
    <binding>
      <command>nasal</command>
      <script>
        interpolate("tu154/switches/bano", 0.0, 0.1 );
      </script>
    </binding>
  </action>
</animation>
<animation>
  <type>pick</type>
  <object-name>hotspot_3</object-name>
  <visible>false</visible>
  <action>
    <button>0</button>
    <repeatable>false</repeatable>
    <binding>
      <command>nasal</command>
      <script>
        interpolate("tu154/switches/omi", 1.0, 0.1 );
        warning.strobe_control(1);
      </script>
    </binding>
  </action>
</animation>
<animation>
  <type>pick</type>
  <object-name>hotspot_4</object-name>
  <visible>false</visible>
  <action>
    <button>0</button>
    <repeatable>false</repeatable>
    <binding>
      <command>nasal</command>
      <script>
        interpolate("tu154/switches/omi", 0.0, 0.1 );
        warning.strobe_control(0);
      </script>
    </binding>
  </action>
</animation>
<animation>
  <type>pick</type>
  <object-name>hotspot_5</object-name>
  <visible>false</visible>
  <action>
    <button>0</button>
    <repeatable>false</repeatable>
    <binding>
      <command>nasal</command>
      <script>
        interpolate("tu154/switches/gauge-light", 1.0, 0.1 );
	setprop("tu154/textures/capt-panel", "vc01_night.png");
	setprop("tu154/textures/copilot-panel", "vc02_night.png");
	setprop("tu154/textures/overhead-panel", "vc06_l.png");
	setprop("tu154/textures/fe-panel", "vc08_l.png");
      </script>
    </binding>
  </action>
</animation>
<animation>
  <type>pick</type>
  <object-name>hotspot_6</object-name>
  <visible>false</visible>
  <action>
    <button>0</button>
    <repeatable>false</repeatable>
    <binding>
      <command>nasal</command>
      <script>
        interpolate("tu154/switches/gauge-light", 0.0, 0.1 );
	setprop("tu154/textures/capt-panel", "vc01_t.png");
	setprop("tu154/textures/copilot-panel", "vc02_t.png");
	setprop("tu154/textures/overhead-panel", "vc06_t.png");
	setprop("tu154/textures/fe-panel", "vc08_t.png");
      </script>
    </binding>
  </action>
</animation>



</PropertyList>
