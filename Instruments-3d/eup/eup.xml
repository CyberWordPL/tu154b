<!-- Electrical turn indicator EUP
3D instrument for Tu-154 -->
<PropertyList>
 <path>eup.ac</path>
<!-- Internal instruments lighting -->
<animation>
  <type>material</type>
  <object-name>back</object-name>
  <object-name>text</object-name>
  <object-name>needle</object-name>
  <emission>
    <red-prop>tu154/light/instruments/int-red</red-prop>
    <green-prop>tu154/light/instruments/int-green</green-prop>
    <blue-prop>tu154/light/instruments/int-blue</blue-prop>
  </emission>
</animation>

  
<!--Needle-->
<animation>
    <type>rotate</type>
    <object-name>needle</object-name>
    <property>instrumentation/turn-indicator/indicated-turn-rate</property>
    <condition>
      <property>tu154/instrumentation/eup/powered</property>
    </condition>
    <interpolation>
      <entry><ind>	-0.7853</ind>	<dep>	-45.0</dep></entry>
      <entry><ind>	0.7853</ind>	<dep>	45.0</dep></entry>
    </interpolation>
    <center>
      <x-m>0.0</x-m>
      <y-m>0.0</y-m>
      <z-m>-0.01</z-m>
    </center>
    <axis>
      <x>-1.0</x>
      <y>0.0</y>
      <z>0.0</z>
    </axis>
</animation>

<animation>
  <type>rotate</type>
  <object-name>ball</object-name>
  <property>instrumentation/slip-skid-ball/indicated-slip-skid</property>
  <condition>
    <property>tu154/instrumentation/eup/powered</property>
  </condition>
  <interpolation>
    <entry><ind>	-3.0</ind>	<dep>	-10.0</dep></entry>
    <entry><ind>	3.0</ind>	<dep>	10.0</dep></entry>
  </interpolation>
  <center>
    <x-m>0.0</x-m>
    <y-m>0.0</y-m>
    <z-m>0.1</z-m>
  </center>
  <axis>
    <x>-1.0</x>
    <y>0.0</y>
    <z>0.0</z>
  </axis>
</animation>



</PropertyList>
